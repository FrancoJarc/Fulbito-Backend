generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id         String     @id @default(uuid())
  nombre     String
  apellido   String
  dni        Int
  telefono   Int
  correo     String     @unique
  contrasena String
  rol        UserRole   @default(jugador)
  Reservas   Reservas[]
}

enum UserRole {
  jugador
  due√±o
}

model Canchas {
  id          String     @id @default(uuid())
  nombre      String
  telefono    Int
  capacidad   Int
  precio_hora Float
  calle       String
  Reservas    Reservas[]
  Horarios    Horarios[]
}

model Reservas {
  id String @id @default(uuid())

  id_cancha String
  cancha    Canchas @relation(fields: [id_cancha], references: [id])

  id_usuario     String
  usuario        Usuarios @relation(fields: [id_usuario], references: [id])
  fecha_reserva  String
  horario_inicio String
  horario_fin    String
}

model Horarios {
  id        String  @id @default(uuid())
  id_cancha String
  cancha    Canchas @relation(fields: [id_cancha], references: [id])

  horario_inicio     String
  horario_fin        String
  dias_semana_inicio String
  dias_semana_fin    String
}
